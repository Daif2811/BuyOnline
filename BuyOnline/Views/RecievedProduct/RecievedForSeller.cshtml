@model IEnumerable<BuyOnline.Models.RecievedProduct>


<div class="row">
    <h2 class="text-center page-header" style="background-color:black; color:white; padding:10px;">Recieved Orders</h2>
    <hr />
</div>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 thumbnail" >

            <img src="~/Images/Products/@Html.DisplayFor(model => item.BuyProduct.Product.ProductImage)" alt="Image" style="height:340px;" class="thumbnail" />
            <div style="padding:10px;">
            <h3><strong> @Html.DisplayFor(model => item.BuyProduct.Product.ProductName)</strong> </h3>
            <h3><strong>Customer : </strong> @Html.DisplayFor(model => item.BuyProduct.User.UserName)</h3>
            <h5><strong>Address : </strong> @Html.DisplayFor(model => item.BuyProduct.Address)</h5>
            <h5><strong>Price : </strong> @Html.DisplayFor(model => item.BuyProduct.Product.ProductPrice) LE</h5>
            <h5><strong>Buy Date : </strong> @Html.DisplayFor(model => item.BuyProduct.BuyDate)</h5>
            <h5><strong>Recieved Date : </strong>  @Html.DisplayFor(model => item.RecievedDate)</h5>
            <h5><strong>Rating : </strong>@for (int i = 0; i < item.BuyProduct.Rating; i++)
            { <span class="glyphicon glyphicon-star" style="color:yellow;"></span>}</h5>
            </div>

</div>
    }
</div>
<br /><hr />
<div class="row">
@Html.ActionLink("Back To Your Products", "AllProductsBySeller","Product", null, new { @class = "btn btn-warning" })
<a href="~/Home/Index" class="btn btn-success">Back To Home</a>

</div>
