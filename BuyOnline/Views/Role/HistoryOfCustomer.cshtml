@model IEnumerable<BuyOnline.Models.BuyProduct>

@{
    ViewBag.Title = "CustomerBuying";
}

<div class="row">
    <h2 class="text-center page-header" style="background-color:black; color:white; padding:10px;">History of customer</h2>
    <hr />
</div>


<div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 thumbnail">
                <img src="~/Images/Products/@Html.DisplayFor( a => item.Product.ProductImage)" style="height:340px;" />
                <h3>@Html.DisplayFor(a => item.Product.ProductName)</h3>
                <h5>@Html.DisplayFor(a => item.Product.ProductDescription)</h5>
                <h5>Price : @Html.DisplayFor(a => item.Product.ProductPrice) LE</h5>
                <h5>Order Date : @Html.DisplayFor(a => item.BuyDate)</h5>
                <h5>Recieved : @Html.DisplayFor(a => item.Pay)</h5>
                @if (item.Pay == false)
                {
                    <h3 style="color:red;">Pending Order</h3>
                }

                @Html.ActionLink("Details", "Details","BuyProduct", new { id = item.ProductId }, new { @class = "btn btn-primary" })


                @*<h3>Quantity : @Html.DisplayFor(a => item.BuyProducts.Quantity)</h3>*@
            </div>



        }
    </div>


    <hr />

    <div class="row">
        @Html.ActionLink("Back To Home", "Index","Home", null, new { @class = "btn btn-warning" })
    </div>
</div>
