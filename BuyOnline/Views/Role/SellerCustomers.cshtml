@model IEnumerable<BuyOnline.Models.ApplicationUser>


@{
    ViewBag.Title = "SellerCustomers";
}
<div class="row">
<h2 class="panel-heading text-center" style="background-color:black; color:white;">My Customers</h2>
    <hr />
</div>

<div class="row">
    <table class="table table-bordered table-striped table-hover text-center">
        <tr class="text-center">
            <th class="text-center">
                User Name
            </th>
            <th class="text-center">
                Email
            </th>
            <th class="text-center">
                phone Number
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
          
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td class="text-center">
                    @Html.ActionLink("All Products of this customer", "HistoryOfCustomer", new { id = item.Id }, new { @class = "btn btn-primary" })

                </td>
            </tr>
        }
    </table>
</div>
<br />
<div class="row">
    @Html.ActionLink("Back To Home", "Index","Home", null, new { @class = "btn btn-warning" })
</div>
