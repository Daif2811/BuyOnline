@model BuyOnline.Models.Category

@{
    ViewBag.Title = "CategoryProducts";
}

<div class="row">
    <h2 class="panel-heading text-center" style="background-color:black; color:white;">@Html.DisplayFor(model => model.CategoryName)</h2>
    <hr />
    <div>
        <div class="row">
            <div class="col-md-6">
                <h4><strong>Description Category : </strong>@Html.DisplayFor(model => model.CategoryDescription)</h4>
            </div>

            <div class="col-md-6">
                <h4><strong>Count of Products : </strong>@Model.Products.Count() products</h4>
            </div>

        </div>
    </div>
</div>

<hr />
<div>
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-md-3 thumbnail">
                <img src="~/Images/Products/@Html.DisplayFor(modelItem => item.ProductImage)" style="height:340px;"/>
                <h3>@Html.DisplayFor(modelItem => item.ProductName)</h3>
                <h5>@Html.DisplayFor(modelItem => item.ProductDescription)</h5>
                <h3>Price : @Html.DisplayFor(modelItem => item.ProductPrice) LE</h3>
                @Html.ActionLink("Details","Details", "BuyProduct", new { id = item.ProductId } , new { @class = "btn btn-primary" })
                @Html.ActionLink("Buy Now", "BuyProduct", "BuyProduct", new { id = item.ProductId }, new { @class = "btn btn-success" })

                
            </div>
        }

    </div>
</div>



<hr />


<div class="row">
   
    @Html.ActionLink("Back To Home","Index","Home", null  , new { @class = "btn btn-warning" })
</div>
