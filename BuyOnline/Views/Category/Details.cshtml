@model BuyOnline.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center page-header" style="background-color:black; color:white; padding:10px;">Details</h2>


<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
        <dt>
            All products
        </dt>
        <dd>
            <table class="table table-bordered table-responsive table-striped">
                <tr>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Price</th>
                    <th>Product Image</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                        <td><img src="~/Images/Products/@Html.DisplayFor(modelItem => item.ProductImage)" class="thumbnail" style="width:60px; height:70px;"/></td>
                        <td>@Html.DisplayFor(modelItem => item.ProductQuantity)</td>

                    </tr>
                }

            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
