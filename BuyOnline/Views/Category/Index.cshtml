@model IEnumerable<BuyOnline.Models.Category>

@{
    ViewBag.Title = "Index";
}
<
<div class="row">

    <h2 class="text-center" style="background-color:black; color:white; padding:10px;">All Categories</h2>
    <hr />
</div>


<div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 thumbnail" style="margin-bottom:20px;">
                <img src="#" class="thumbnail" style="height:400px;" />
                <h3>@Html.DisplayFor(modelItem => item.CategoryName)</h3>
                <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
                <h4><strong>Count of Product : </strong>@item.Products.Count() products</h4>
                @Html.ActionLink("Show All Products", "CategoryProducts", new { id = item.CategoryId }, new { @class = "btn btn-primary" })

            </div>
        }
    </div>
</div>

<hr />

<div>
    <div class="row">
        @Html.ActionLink("Back To Home", "Index", "Home", null, new { @class = "btn btn-warning" })


    </div>
</div>
