@using BuyOnline.Models



@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
{

    var db = new ApplicationDbContext();
    var category = db.Categories;


    @Html.AntiForgeryToken()


    <ul class="nav navbar-nav">
        <li class="dropdown ">

            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span>Search By Category</span>
                <span class="glyphicon glyphicon-chevron-down"></span>
            </a>

            <ul class="dropdown-menu" style="background-color:black; margin-top:0px;">
                <li class="row" style="width:202px;">

                    @foreach (var item in category)
                    {
                        <p>
                            <strong>
                    @*@Html.ActionLink(@item.CategoryName, "CategoryProducts", "Category", new { id = item.CategoryId }, new { @class = "text-center btn-block" })*@

                    <a href="~/Category/CategoryProducts/@item.CategoryId"
                       class="text-center btn-block" style="color:white; margin-bottom:20px;">
                        @item.CategoryName
                    </a>
                    </strong>
                    </p>
                    }

</li>

            </ul>
        </li>
    </ul>
}
